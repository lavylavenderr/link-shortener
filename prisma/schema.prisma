generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id        Int      @id @default(autoincrement())
  link      String
  uid       String   @unique
  hits      Int      @default(0)
  createdAt DateTime @default(now())
}

model Session {
  id String @id

  ipAddress String
  userAgent String

  expiresAt DateTime
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model User {
  id              Int       @id @default(autoincrement())
  discordId       String    @unique
  discordUsername String
  sessions        Session[]
  createdAt       DateTime  @default(now())
}
